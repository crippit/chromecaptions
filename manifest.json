{
  "manifest_version": 3,
 
  "name": "Chrome Captions",
  "version": "0.2.0",
  "description": "Edit the Size of Google Meet Captions",
 
  "action": {
    "default_popup": "popup.html"
  },
  
  "background": {
    "service_worker": "scripts.js"
  },
  
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["popup.js"],
    "matches": ["https://meet.google.com/*"]
  }],
  
  "icons": {
    "128": "icon128.png"
  },
 
   "permissions":[
     "activeTab",
     "scripting",
     "storage"
],
  
 "host_permissions":[
  "https://meet.google.com/*"
  ]
 
}
